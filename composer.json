{
  "name": "spoom-php/sql-mysql",
  "description": "MySQL support for Spoom Framework",
  "keywords": [ "spoom", "sql", "mysql", "database", "driver" ],
  "type": "spoom-extension",
  "license": "MIT",
  "authors": [
    {
      "name": "Nagy Samu"
    }
  ],

  "require": {
    "php": "^7.2.0",
    "ext-mysqli": "*",

    "spoom-php/composer": "^1.0.0",
    "spoom-php/core": "@dev",
    "spoom-php/sql": "@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0"
  },

  "autoload": {
    "psr-4": { "Spoom\\Sql\\MySQL\\": "src/extension/" }
  },
  "autoload-dev": {
    "psr-4": { "Spoom\\Sql\\MySQL\\": "test/" }
  },

  "extra": {
    "spoom": {
      "public": {
        "src/configuration/": "spoom-sql-mysql/configuration/"
      }
    }
  }
}
